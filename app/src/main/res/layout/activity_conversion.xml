<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical"
    tools:context=".Fragment.homeFragment.ConversionActivity">

    <include layout="@layout/tit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textview"
                android:layout_marginLeft="50px"
                android:layout_marginTop="35px"
                android:text="@string/Conversion_front" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="370px"
                android:layout_marginTop="34px"
                android:background="@color/afragment"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/con_shuliang"
                        style="@style/atextview"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        android:layout_weight="1"
                        android:text="@string/Home_balance" />

                    <TextView
                        android:id="@+id/car_qian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/con_shuliang"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_30"
                        android:textColor="@color/tuichu"
                        android:textSize="@dimen/dp_25" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/con_zichan"
                        style="@style/atextview"
                        android:layout_below="@+id/con_shuliang1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        android:layout_weight="1"
                        android:text="@string/Home_tong1" />

                    <TextView
                        android:id="@+id/conversion_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/con_zichan"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_30"
                        android:textColor="@color/essential"
                        android:textSize="@dimen/dp_25" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/textview"
                android:layout_marginLeft="50px"
                android:layout_marginTop="35px"
                android:text="@string/Conversion_shuliang" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginTop="37px"
                android:background="@color/afragment"
                android:orientation="horizontal">

                <TextView
                    style="@style/atextview"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:layout_weight="7"
                    android:text="@string/Conversion_shurushuliang" />

                <EditText
                    android:id="@+id/duihuanshu"
                    style="@style/edittext"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50px"
                    android:gravity="right"
                    android:hint="0.00"
                    android:inputType="number"
                    android:textSize="38px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvcard"
                style="@style/atextview"
                android:layout_gravity="right"
                android:layout_marginRight="50px"
                android:layout_marginTop="30px"
                android:text="@string/Transfer_number" />

            <TextView
                style="@style/textview"
                android:layout_marginLeft="50px"
                android:layout_marginTop="35px"
                android:text="@string/Conversion_queen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginTop="37px"
                android:background="@color/afragment"
                android:orientation="horizontal">

                <TextView
                    style="@style/atextview"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:layout_weight="7"
                    android:text="@string/Home_balance" />

                <TextView
                    android:id="@+id/carinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50px"
                    android:background="@null"
                    android:gravity="right"
                    android:text="1000"
                    android:textColor="@color/afragmenttext" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:background="@color/afragment"
                android:orientation="horizontal">

                <TextView
                    style="@style/atextview"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:layout_weight="7"
                    android:text="@string/Home_tong1" />

                <TextView
                    android:id="@+id/con_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50px"
                    android:background="@null"
                    android:gravity="right"
                    android:text="1000"
                    android:textColor="@color/afragmenttext" />
            </LinearLayout>

            <Button
                android:id="@+id/conversion_ok"
                android:layout_width="984px"
                android:layout_height="114px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="@color/essential"
                android:text="@string/Conversion_queren"
                android:textColor="@color/grayf2"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>