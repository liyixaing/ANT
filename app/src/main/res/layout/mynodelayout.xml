<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t1"
        style="@style/textview"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/Home_t2"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/relativeT1"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/afragment">

        <ImageView
            android:id="@+id/t1Hade"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="31dp"
            android:src="@mipmap/toux" />

        <TextView
            android:id="@+id/t1Name"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1Hade"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ANT token"
            android:textColor="@color/aa"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t1Userid"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1Name"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="ID:100000"
            android:textColor="@color/aa"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t1UserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1Userid"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="188****8888"
            android:textColor="@color/aa"
            android:textSize="10sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/t1Hade"
            android:background="@color/appbackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/MyNode_award"
            android:textColor="@color/aa"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1Hade"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/t1Hade"
            android:text="@string/cardliang"
            android:textColor="@color/aa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/t1Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1Hade"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/t1Hade"
            android:text="0.0000"
            android:textColor="@color/aa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/t1Num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/t1Card"
            android:layout_marginRight="40dp"
            android:text="节点量：0"
            android:textColor="@color/aa" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/t1Card"
            android:layout_marginRight="13dp"
            android:layout_marginTop="21dp"
            android:background="@color/appbackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t1Card"
            android:layout_below="@+id/t1Card"
            android:layout_marginTop="29dp"
            android:text="@string/tuijianren"
            android:textColor="@color/aa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/t1Recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t1Card"
            android:layout_below="@+id/t1Card"
            android:layout_marginTop="46dp"
            android:text="00000"
            android:textColor="@color/aa"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/bb"
            android:layout_width="@dimen/dp_10"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/t1Num"
            android:layout_alignTop="@+id/t1Recommend"
            android:src="@mipmap/shouji" />

        <TextView
            android:id="@+id/t1RecommendPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1Recommend"
            android:layout_toRightOf="@+id/bb"
            android:text="188****8888"
            android:textColor="@color/aa"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>
