<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.homeFragment.MessageExActivity">

    <include layout="@layout/tit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/message"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageview"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/explain" />

        <TextView
            android:id="@+id/typeExplain"
            style="@style/qqq"
            android:layout_alignTop="@+id/imageview"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:textColor="@color/appbackground"
            android:layout_toRightOf="@+id/imageview"
            android:text="@string/Dpos_explain" />

        <TextView
            android:id="@+id/explainMagess"
            style="@style/qqq"
            android:layout_alignLeft="@+id/imageview"
            android:layout_below="@+id/imageview"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/appbackground"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="12px"
            android:singleLine="false"
            />
    </RelativeLayout>
</LinearLayout>