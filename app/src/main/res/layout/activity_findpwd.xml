<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    tools:context=".Activity.FindpwdActivity">

    <ImageView
        android:layout_width="94dp"
        android:layout_height="125dp"
        android:src="@mipmap/iclauncher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/findlogin"
        style="@style/textview1"
        android:text="@string/Login_button"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/findregister"
        style="@style/textview1"
        android:text="@string/Login_register"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />


    <TextView
        android:id="@+id/findpwd"
        style="@style/textview"
        android:text="@string/Login_forGetpwd"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/essential"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/pwd_state"
                style="@style/textview"
                android:text="@string/Login_phoneType2" />

            <TextView
                android:id="@+id/pwd_state1"
                style="@style/textview"
                android:textSize="15sp"

                />

            <ImageView
                android:layout_width="26px"
                android:layout_height="42px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/sanjiao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview"
                android:layout_weight="4"
                android:textSize="15sp"
                android:text="@string/Login_phone" />

            <EditText
                android:id="@+id/user_Finname"
                style="@style/edittext"
                android:layout_weight="2"
                android:background="@null"
                android:textSize="15sp"
                android:hint="@string/Phoneup_phone"
                android:inputType="phone" />

            <TextView
                android:id="@+id/user_finGetssm"
                style="@style/textview"
                android:textSize="15sp"

                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.5"
                android:text="@string/Register_getverification" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/essential" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview"
                android:textSize="15sp"

                android:layout_weight="5"
                android:text="@string/Register_verification" />

            <EditText
                android:id="@+id/user_Finssm"
                style="@style/edittext"
                android:background="@null"
                android:textSize="15sp"

                android:hint="@string/Register_verificationimport"
                android:inputType="number"
                android:textCursorDrawable="@drawable/edit_num_bg_red" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/essential" />

        <Button
            android:id="@+id/find_next"
            android:layout_width="984px"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/butt"
            android:text="@string/Register_next"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>