<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mode.Fragment.red_packet.RedPayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_white_selector_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:id="@+id/payRed"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="39px"
            android:layout_marginTop="52px"
            android:src="@mipmap/red_colse" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/textview"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="115px"
            android:layout_marginTop="43px"
            android:text="@string/RedEnvelopePwdPay"
            android:textColor="@color/aa" />

        <LinearLayout
            android:id="@+id/ly"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="#d62a1b"
            android:orientation="horizontal" />

        <TextView
            style="@style/textview"
            android:layout_below="@+id/ly"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/RedEnvelopeMoney"
            android:textColor="@color/aa" />

        <TextView
            android:id="@+id/redCardPay"
            style="@style/textview"
            android:layout_below="@+id/ly"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="00.00资产"
            android:textColor="@color/aa" />

        <LinearLayout
            android:id="@+id/redPayLayout"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/redCardPay"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#e5e5e5"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ddasda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redPayLayout"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_marginTop="4dp"
                android:layout_height="15dp"
                android:src="@drawable/red_card" />

            <TextView
                style="@style/textview"
                android:layout_below="@+id/ly"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="@string/RedEnvelopeProperty"
                android:textColor="@color/aa"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/redPayLayout1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ddasda"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#e5e5e5"
            android:orientation="horizontal" />

        <com.example.administrator.mode.Utlis.PayPwdEditText
            android:id="@+id/ppetRed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/redPayLayout1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
