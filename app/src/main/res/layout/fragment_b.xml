<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical"
    tools:context=".Fragment.B_Fragment">
    <!--    <com.baoyz.widget.PullRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.baoyz.widget.PullRefreshLayout>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/afragment">

                <TextView
                    style="@style/textview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/Wallet_appraisement"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monet"
                    style="@style/qqq"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/wallet1"
                    android:text="00.0000"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/zaa"
                    android:layout_width="23dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/monet"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/eyeopen" />

                <TextView
                    android:id="@+id/monetaa"
                    style="@style/qqq"
                    android:layout_below="@+id/monet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="$ â‰ˆ 0.000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/afragment"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top"
                    style="@style/xx"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wallet3"
                    android:gravity="center"
                    android:text="@string/Wallet_top"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/colorhome" />

                <TextView
                    android:id="@+id/withdraw"
                    style="@style/xx"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wallet4"
                    android:gravity="center"
                    android:text="@string/Wallet_withdraw"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/colorhome" />

                <TextView
                    android:id="@+id/detail"
                    style="@style/xx"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wallet5"
                    android:gravity="center"
                    android:text="@string/Wallet_detail"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    style="@style/xx"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Wallet_cardDetail"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/Reg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:text="@string/Wallet_conceal"
                    android:textColor="@color/essential"
                    android:textSize="14sp"
                    android:theme="@style/My_CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="BTC" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ETH" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ANT" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="EOS" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="LTC" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="BCH" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/afragment">

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="XRP" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="00.0000000" />

                <TextView
                    style="@style/qqq"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dongjie" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>