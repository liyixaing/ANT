<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.homeFragment.PayDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_selector_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39px"
            android:layout_marginTop="52px"
            android:src="@mipmap/unlock" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/textview"
            android:layout_marginLeft="115px"
            android:layout_marginTop="43px"
            android:text="@string/Particuars_payinput" />

        <LinearLayout
            android:id="@+id/ly"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="54px"
            android:background="@color/essential"
            android:orientation="horizontal"></LinearLayout>

        <com.example.administrator.mode.Utlis.PayPwdEditText
            android:id="@+id/ppet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ly"
            android:layout_marginLeft="91px"
            android:layout_marginRight="91px"
            android:layout_marginTop="57px" />

        <TextView
            android:id="@+id/didog_findpwd"
            style="@style/textview"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ppet"
            android:layout_marginBottom="50px"
            android:layout_marginRight="91px"
            android:layout_marginTop="57px"
            android:text="@string/Particuars_pay" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>