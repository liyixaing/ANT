<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical"
    tools:context=".Fragment.homeFragment.ParticularsActivity">

    <include layout="@layout/tit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/particulars_type"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/image_rotate" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:text="@string/Particulars_await"
                android:textColor="@color/essential"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="778px"
                android:layout_marginTop="80px"
                android:background="@color/afragment">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30">

                    <ImageView
                        android:id="@+id/iv_establish"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginTop="60px"
                        android:src="@mipmap/y" />

                    <TextView
                        android:id="@+id/tv_establis"
                        style="@style/qqq"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="75px"
                        android:layout_marginTop="60px"
                        android:text="@string/Particulars_establish" />

                    <TextView
                        android:id="@+id/tv_establisa"
                        style="@style/xx"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="55px"
                        android:text="@string/Register_ok" />


                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="38dp"
                        android:visibility="gone"
                        android:layout_below="@+id/iv_establish"
                        android:src="@mipmap/yq" />

                    <TextView
                        android:id="@+id/tv_message"
                        style="@style/qqq"
                        android:layout_below="@+id/tv_establis"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60px"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/iv_message"
                        android:text="@string/Particulars_message" />

                    <TextView
                        android:id="@+id/tv_message1"
                        style="@style/xx"
                        android:layout_below="@+id/tv_establisa"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="55px"
                        android:visibility="gone"
                        android:text="@string/Register_ok" />


                    <ImageView
                        android:id="@+id/iv_encryption"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="38dp"
                        android:visibility="gone"
                        android:layout_below="@+id/iv_message"
                        android:src="@mipmap/yq" />

                    <TextView
                        android:id="@+id/tv_encryption"
                        style="@style/qqq"
                        android:layout_below="@+id/tv_message"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60px"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/iv_encryption"
                        android:text="@string/Particulars_encryption" />

                    <TextView
                        android:id="@+id/tv_encryption1"
                        style="@style/xx"
                        android:layout_below="@+id/tv_message1"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:layout_marginTop="55px"
                        android:text="@string/Register_ok" />


                    <ImageView
                        android:id="@+id/iv_verification"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="38dp"
                        android:visibility="gone"
                        android:layout_below="@+id/iv_encryption"
                        android:src="@mipmap/yq" />

                    <TextView
                        android:id="@+id/tv_verification"
                        style="@style/qqq"
                        android:layout_below="@+id/tv_encryption"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60px"
                        android:visibility="gone"
                        android:text="@string/Particulars_verification" />

                    <TextView
                        android:id="@+id/tv_verification1"
                        style="@style/xx"
                        android:layout_below="@+id/tv_encryption1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="55px"
                        android:visibility="gone"
                        android:text="@string/Particulars_pass" />

                    <ImageView
                        android:id="@+id/iv_sen"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="38dp"
                        android:layout_below="@+id/iv_verification"
                        android:visibility="gone"
                        android:src="@mipmap/yq" />

                    <TextView
                        android:id="@+id/tv_sen"
                        style="@style/qqq"
                        android:layout_below="@+id/tv_verification"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="65px"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/iv_sen"
                        android:text="@string/Particulars_send" />

                    <TextView
                        android:id="@+id/tv_sen1"
                        style="@style/xx"
                        android:layout_below="@+id/tv_verification1"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:layout_marginTop="55px"
                        android:text="@string/Register_ok" />


                    <ImageView
                        android:id="@+id/iv_anticipation"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="38dp"
                        android:layout_below="@+id/iv_sen"
                        android:visibility="gone"
                        android:src="@mipmap/yq" />

                    <TextView
                        android:id="@+id/tv_anticipation"
                        style="@style/qqq"
                        android:layout_below="@+id/tv_sen"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="75px"
                        android:layout_marginTop="55px"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/iv_anticipation"
                        android:text="@string/Particulars_anticipation" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/but_particulars"
                android:layout_width="984px"
                android:layout_height="114px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="@color/essential"
                android:text="@string/Conversion_queren"
                android:textColor="@color/grayf2"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>