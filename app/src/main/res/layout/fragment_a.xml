                        android:layout_marginRight="30px"
                        android:layout_marginBottom="10dp"
                        android:background="@color/afragment"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview"
                            android:layout_margin="@dimen/dp_5"
                            android:text="@string/Home_live"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@color/colorhome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_card"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live1"
                                android:gravity="center"
                                android:text="@string/Property_dealdetail"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/refuel"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live2"
                                android:gravity="center"
                                android:text="@string/Home_refuel"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/contract"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/icon4"
                                android:gravity="center"
                                android:text="@string/Property_contract"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/colorhome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/telephone"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live4"
                                android:gravity="center"
                                android:text="@string/Home_telephone"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/taking"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live5"
                                android:gravity="center"
                                android:text="@string/Home_taking"
                                android:textSize="13sp" />


                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/game"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live6"
                                android:gravity="center"
                                android:text="@string/Home_game"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/colorhome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/take"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live7"
                                android:gravity="center"
                                android:text="@string/Home_take"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/information"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live8"
                                android:gravity="center"
                                android:text="@string/Home_information"
                                android:textSize="13sp" />


                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/more1"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live9"
                                android:gravity="center"
                                android:text="@string/Home_more1"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.baoyz.widget.PullRefreshLayout>
</LinearLayout>