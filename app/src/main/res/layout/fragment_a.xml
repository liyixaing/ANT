                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/T2"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/icon2"
                                android:gravity="center"
                                android:text="@string/Home_more"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/colorhome" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/book"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/live3"
                                android:gravity="center"
                                android:text="@string/Home_book"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/zhi"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/icon1"
                                android:gravity="center"
                                android:text="@string/Home_t1"
                                android:textSize="13sp" />


                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/colorhome" />

                            <TextView
                                android:id="@+id/relative_comm1"
                                style="@style/vitextview"
                                android:layout_width="52dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/icon3"
                                android:gravity="center"
                                android:text="@string/Home_zhitui"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
