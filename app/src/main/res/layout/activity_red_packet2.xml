<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.homeFragment.RedPacket2Activity">

    <RelativeLayout
        android:id="@+id/red3"
        android:layout_width="272dp"
        android:layout_height="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/backgroundRedPacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/redpacket1" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:textColor="@color/red1"
            android:textSize="28sp" />

        <Button
            android:id="@+id/saveRed"
            android:layout_width="446px"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/but"
            android:text="@string/Conversion_save"
            android:textColor="@color/tuichu" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>